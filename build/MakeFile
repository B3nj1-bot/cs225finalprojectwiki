CXX=g++
CXX_FLAGS=-std=c++20 -Iincludes -g -fstandalone-debug -O0 -Wall -Wextra -Werror
INC=-I/src

exec: bin/exec
parse: parse
tests: bin/tests

parse: ./src/parse_data.cpp
	$(CXX) $(CXX_FLAGS) $(INC) $^ -o $@ -

bin/tests: ./tests/tests.cc ./src/functions.cc ./src/utilities.cc
	$(CXX) $(CXX_FLAGS) $(INC) $^ -o $@

.DEFAULT_GOAL := all
.PHONY: exec tests clean

clean:
	rm -f bin/*
